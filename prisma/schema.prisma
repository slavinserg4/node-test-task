generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id       String   @id @default(cuid())
  name     String
  email    String   @unique
  holidays Holiday[]
}

model Holiday {
  id          String @id @default(cuid())
  date        String
  localName   String
  name        String
  countryCode String
  userId      String
  user        User   @relation(fields: [userId], references: [id])
}
